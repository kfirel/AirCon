{
  "name": "HiSense Air Conditioners",
  "version": "0.3.13",
  "slug": "hisense_ac",
  "description": "Interface for controlling Air Conditioners, e.g. with HiSense modules.",
  "url": "https://github.com/kfirel/AirCon",
  "image": "kfirelg/hvac",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "application",
  "boot": "auto",
  "host_network": true,
  "map": ["config:rw"],
  "discovery": ["mqtt"],
  "services": ["mqtt:want"],
  "environment": {
    "CONFIG_DIR": "/config/hisense",
    "OPTIONS_FILE": "/data/options.json"
  },
  "options": {
    "log_level": "DEBUG",
    "mqtt_host": "core-mosquitto",
    "mqtt_user": "kfirel",
    "mqtt_pass": "?",
    "port": 8888,
    "app": [
      {
        "username": "kfirel@gmail.com",
        "password": "?",
        "code": "tornado-us"
      }
      ]
  },
  "schema": {
    "app": [
      {
        "username": "str",
        "password": "str",
        "code": "str"
      }
    ],
    "log_level": "list(CRITICAL|ERROR|WARNING|INFO|DEBUG)?",
    "mqtt_host": "str?",
    "mqtt_user": "str?",
    "mqtt_pass": "str?",
    "port": "port"
  }
}
